/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
// @import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #55ACEE
background-color = white

centerVertical()
  position relative
  top 50%
  -webkit-transform translateY(-50%)
  -ms-transform translateY(-50%)
  transform translateY(-50%)
  
preserve3d()
  -webkit-transform-style preserve-3d
  -moz-transform-style preserve-3d
  transform-style preserve-3d

body
  position relative
  color #444
  background-color background-color
  font-style normal
  font-family 'Helvetica Neue', 'Helvetica', 'Arial', 'sans-serif'
  
#globalheader
  position absolute
  top 0
  left 0
  width 100%
  z-index 9999
  background rgba(0, 0, 0, 0.6)
  font-size 16px
  
  ul
    display block
    width 100%
    height 46px
    text-align center
    preserve3d()
    
    li
      display inline-block
      padding 0 30px
      centerVertical()
      
      a
        text-decoration none
        color white
        
        &:hover
          color main-color

.container
  width 100%
  
.registration
  display block
  padding 50px
  height 630px
  
  text-align center
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)

  .collapsable-button
    display block
    margin 20px
    
.collapsable-button
  width 50%
  background rgba(0, 0, 0, 0.6)
  color white
  
  border-radius 10px
  
  &:hover
    color main-color

.carousel
  display block
  height 630px
  preserve3d()
  
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)
  
  .carousel-item
    line-height 630px

.main-content
  float left
  width 300px

  p
    margin-bottom 20px

.sidebar
  float left
  width 200px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0 10px
      margin-bottom 10px

p
  line-height 1.8
  
.hidden
  display none

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px